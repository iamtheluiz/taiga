{
  "name": "taiga",
  "author": "Iamtheluiz <iamtheluiz.@gmail.com>",
  "version": "0.1.0",
  "description": "An Electron shortcute app",
  "main": "./.webpack/main/index.js",
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "start": "electron-forge start",
    "package": "electron-forge package && cd ./TaigaRecognition && dotnet publish -c Release -o ../out/Taiga-win32-x64/resources",
    "package:ci": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-forge publish",
    "lint": "eslint . --ext js,ts,tsx --fix",
    "test": "jest --reporters=jest-junit --reporters=default"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ],
    "**/*.ts": [
      "eslint --fix"
    ],
    "**/*.tsx": [
      "eslint --fix"
    ]
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "electron-log": "^4.4.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-loader": "4.13.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.1",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "styled-components": "5.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "@electron-forge/plugin-webpack": "6.0.0-beta.57",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "@types/styled-components": "5.1.10",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "babel-loader": "8.2.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "electron": "13.1.2",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "^6.2.0",
    "husky": "^7.0.4",
    "jest": "27.0.4",
    "jest-junit": "^13.2.0",
    "lint-staged": "^12.3.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1",
    "ts-jest": "27.0.3",
    "typescript": "4.3.4",
    "wait-on": "5.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "forge": {
      "packagerConfig": {
        "name": "Taiga",
        "executableName": "taiga",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Taiga"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
